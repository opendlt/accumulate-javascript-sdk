    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run File",
            "program": "${file}",
            "request": "launch",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "node"
        },
        {
            "name": "Run Simulator",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}/accumulate/tools/cmd/simulator",
            "cwd": "${workspaceFolder}/accumulate",
            "args": [
                "--step=10ms",
                "--port=26660",
                "--log=error;sim=info;executor=debug",
            ]
        }
    ]
}